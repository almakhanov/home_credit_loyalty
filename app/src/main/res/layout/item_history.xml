<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp"
    android:elevation="4dp"
    android:background="@drawable/outline_list_fields_gray"
    android:layout_margin="4dp">

    <TextView
        android:id="@+id/historyTitle"
        android:layout_width="match_parent"
        android:text="Платеж онай"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#444"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/historyDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/historyTitle"
        android:text="12-12-2018"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/historyBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/historyTitle"
        android:text="500 тг"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="bold"
        android:textColor="#555"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/historyFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="190dp"
        app:layout_constraintTop_toBottomOf="@id/historyDate"
        android:text="От: Нурсултан Амаханов"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/historyTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="190dp"
        app:layout_constraintTop_toBottomOf="@id/historyDate"
        android:text="Кому: Онай"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>